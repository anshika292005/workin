generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id           Int           @id @default(autoincrement())
  name         String
  email        String        @unique
  phoneNumber  String        @unique
  password     String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  role         String        @default("candidate")
  applications Application[]
  jobs         Job[]
  profile      Profile?
}

model Profile {
  id              Int      @id @default(autoincrement())
  userId          Int      @unique
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  degree          String?
  graduationYear  String?
  location        String?
  rolesLookingFor String?
  softSkills      String?
  technicalSkills String?
  toolsTech       String?
  university      String?
  workExperience  String?
  user            Users    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Job {
  id           Int           @id @default(autoincrement())
  title        String
  company      String
  location     String
  description  String
  requirements String
  salary       String?
  type         String        @default("full-time")
  hrId         Int
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  applications Application[]
  hr           Users         @relation(fields: [hrId], references: [id], onDelete: Cascade)
}

model Application {
  id          Int      @id @default(autoincrement())
  jobId       Int
  candidateId Int
  status      String   @default("pending")
  response    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  candidate   Users    @relation(fields: [candidateId], references: [id], onDelete: Cascade)
  job         Job      @relation(fields: [jobId], references: [id], onDelete: Cascade)

  @@unique([jobId, candidateId])
}
